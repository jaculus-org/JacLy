{
  "name": "@jaculus/jacly-vscode",
  "displayName": "JacLy",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jacly.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "jacly.openBlockly",
        "title": "JacLy: Open Blockly"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "build": "pnpm run package",
    "build:watch": "npm-run-all -p watch:*",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch --project tsconfig.json",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist out",
    "clean-node": "rm -rf node_modules",
    "test": "vscode-test",
    "compile-web": "pnpm run check-types && pnpm run lint && node esbuild.js --web",
    "watch-web": "npm-run-all -p watch-web:*",
    "watch-web:esbuild": "node esbuild.js --watch --web",
    "watch-web:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package-web": "pnpm run check-types && pnpm run lint && node esbuild.js --production --web",
    "test-web": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/extensionTests.js",
    "pretest-web": "pnpm run compile-web",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@types/assert": "^1.5.11",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/test-web": "^0.0.72",
    "assert": "^2.1.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@jaculus/jacly": "workspace:*"
  }
}
