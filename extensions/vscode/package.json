{
  "name": "@jaculus/jacly-vscode",
  "displayName": "JacLy",
  "description": "JacLy = Jaculus + Blockly editor for VSCode",
  "version": "0.0.1",
  "icon": "media/jacly.png",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "jacly",
        "aliases": [
          "Jacly",
          "jacly"
        ],
        "extensions": [
          ".jacly"
        ],
        "icon": {
          "light": "./media/jacly.png",
          "dark": "./media/jacly.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "jacly",
        "scopeName": "source.jacly",
        "path": "./syntaxes/jacly.tmLanguage.json"
      }
    ],
    "jsonLanguageParticipants": [
      {
        "languageId": "jacly"
      }
    ],
    "customEditors": [
      {
        "viewType": "jacly.editor",
        "displayName": "Jacly Editor",
        "selector": [
          {
            "filenamePattern": "*.jacly"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write .",
    "test": "vscode-test"
  },
  "dependencies": {
    "@jaculus/jacly": "workspace:*",
    "@jaculus/project": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
