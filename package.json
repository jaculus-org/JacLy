{
	"name": "jacly-monorepo",
	"private": true,
	"type": "module",
	"scripts": {
		"prepare": "husky",
		"build": "pnpm -r build",
		"build:watch": "pnpm -r --parallel build:watch",
		"rebuild": "pnpm clean && pnpm i && pnpm build",
		"test": "pnpm -r test",
		"lint": "pnpm -r lint",
		"lint:fix": "pnpm -r lint --fix",
		"format": "pnpm -r format",
		"format:check": "pnpm -r format:check",
		"type-check": "pnpm -r build && pnpm -r run type-check",
		"fix-all": "pnpm -r lint:fix && pnpm -r format",
		"check-all": "pnpm run format:check && pnpm run lint && pnpm run build",
		"clean": "pnpm -r clean",
		"clean-node": "pnpm -r clean-node && rm -rf node_modules",
		"test:prepare-registry": "node --experimental-strip-types test/data/runTsScriptTest.ts"
	},
	"devDependencies": {
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@commitlint/types": "^20.0.0",
		"@jaculus/project": "^0.0.2",
		"@obsidize/tar-browserify": "^6.3.2",
		"@types/node": "^24.10.0",
		"@types/pako": "^2.0.4",
		"chai": "^6.2.0",
		"husky": "^9.1.7",
		"npm-check-updates": "^19.1.2",
		"pako": "^2.1.0",
		"prettier": "^3.6.2"
	}
}
