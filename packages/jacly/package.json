{
  "name": "@jaculus/jacly",
  "description": "Jacly = Blockly editor for Jaculus",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "files": [
    "dist",
    "src/blocks/meta-blocks",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    "./editor": {
      "types": "./dist/editor/index.d.ts",
      "import": "./dist/editor/index.js",
      "default": "./dist/editor/index.js"
    },
    "./blocks": {
      "types": "./dist/blocks/index.d.ts",
      "import": "./dist/blocks/index.js",
      "default": "./dist/blocks/index.js"
    },
    "./blocks/meta-blocks": {
      "types": "./dist/blocks/meta-blocks/index.d.ts",
      "import": "./dist/blocks/meta-blocks/index.js",
      "default": "./dist/blocks/meta-blocks/index.js"
    },
    "./project": {
      "types": "./dist/project/index.d.ts",
      "import": "./dist/project/index.js",
      "default": "./dist/project/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js",
      "default": "./dist/config/index.js"
    }
  },
  "scripts": {
    "build": "tsc && cp -r src/blocks/meta-blocks dist/blocks/meta-blocks",
    "build:watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "echo 'No linting configured for this package'",
    "lint:fix": "echo 'No linting configured for this package'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "schema:gen": "tsx src/config/generate-schema.ts",
    "clean": "rm -rf dist *.tsbuildinfo",
    "clean-node": "pnpm clean && rm -rf node_modules"
  },
  "dependencies": {
    "@alcyone-labs/zod-to-json-schema": "^4.0.10",
    "@jaculus/device": "workspace:*",
    "@jaculus/project": "workspace:*",
    "@kuband/react-blockly": "^10.0.1",
    "@obsidize/tar-browserify": "^6.3.2",
    "@zenfs/core": "^2.4.2",
    "@zenfs/dom": "^1.2.5",
    "blockly": "^12.3.1",
    "fflate": "^0.8.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "vite": "^7.1.12"
  },
  "peerDependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "blockly": {
      "optional": true
    }
  }
}
