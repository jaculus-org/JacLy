{
  "name": "@jaculus/jacly",
  "description": "Jacly = Blockly editor for Jaculus",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    "./editor": {
      "types": "./dist/editor/index.d.ts",
      "import": "./dist/editor/index.js",
      "default": "./dist/editor/index.js"
    },
    "./project": {
      "types": "./dist/project/index.d.ts",
      "import": "./dist/project/index.js",
      "default": "./dist/project/index.js"
    }
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "tsc --watch & tsc-alias --watch",
    "type-check": "tsc --noEmit",
    "lint": "echo 'No linting configured for this package'",
    "lint:fix": "echo 'No linting configured for this package'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "schema:gen": "tsx src/config/generate-schema.ts",
    "test": "pnpm run test:mocha",
    "test:mocha": "mocha",
    "clean": "rm -rf dist *.tsbuildinfo",
    "clean-node": "pnpm clean && rm -rf node_modules"
  },
  "dependencies": {
    "@alcyone-labs/zod-to-json-schema": "^4.0.10",
    "@jaculus/device": "workspace:*",
    "@jaculus/project": "workspace:*",
    "@kuband/react-blockly": "^10.0.1",
    "blockly": "^12.3.1",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "chai": "^6.2.0",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "vite": "^7.1.12"
  }
}
