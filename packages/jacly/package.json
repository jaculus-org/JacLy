{
  "name": "@jaculus/jacly",
  "description": "Jacly = Blockly editor for Jaculus",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "import": "./dist/ui/index.js",
      "default": "./dist/ui/index.js"
    },
    "./storage": {
      "types": "./dist/storage/index.d.ts",
      "import": "./dist/storage/index.js",
      "default": "./dist/storage/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "react": [
        "dist/react/index.d.ts"
      ],
      "storage": [
        "dist/storage/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "echo 'No linting configured for this package'",
    "lint:fix": "echo 'No linting configured for this package'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "schema:gen": "tsx src/config/generate-schema.ts",
    "clean": "rm -rf dist *.tsbuildinfo",
    "clean-node": "rm -rf node_modules"
  },
  "dependencies": {
    "@kuband/react-blockly": "^10.0.0",
    "blockly": "^12.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zod": "^4.1.4"
  },
  "devDependencies": {
    "@finom/zod-to-json-schema": "^3.24.11",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "node:path": "link:@types/node:path",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "~5.9.2",
    "vite": "^7.1.2"
  },
  "peerDependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "blockly": {
      "optional": true
    }
  }
}
