{
  "name": "@jaculus/jacly",
  "description": "Jacly = Blockly editor for Jaculus",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    "./editor": {
      "types": "./dist/editor/index.d.ts",
      "import": "./dist/editor/index.js",
      "default": "./dist/editor/index.js"
    },
    "./project": {
      "types": "./dist/project/index.d.ts",
      "import": "./dist/project/index.js",
      "default": "./dist/project/index.js"
    },
    "./blocks": {
      "types": "./dist/blocks/index.d.ts",
      "import": "./dist/blocks/index.js",
      "default": "./dist/blocks/index.js"
    }
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build && tsc --emitDeclarationOnly && tsc-alias",
    "build:watch": "vite build --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "schema:gen": "tsx src/config/generate-schema.ts",
    "test": "pnpm run test:mocha",
    "test:mocha": "mocha",
    "clean": "rm -rf dist *.tsbuildinfo",
    "clean-node": "pnpm clean && rm -rf node_modules"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@blockly/block-plus-minus": "^9.0.7",
    "@blockly/field-angle": "^6.0.7",
    "@blockly/field-colour": "^6.0.10",
    "@blockly/field-colour-hsv-sliders": "^6.0.10",
    "@blockly/field-slider": "^8.0.8",
    "@blockly/plugin-cross-tab-copy-paste": "^8.0.6",
    "@blockly/shadow-block-converter": "^7.0.9",
    "@jaculus/device": "workspace:*",
    "@jaculus/project": "workspace:*",
    "@kuband/react-blockly": "^10.0.1",
    "blockly": "^12.3.1",
    "lucide-react": "^0.562.0",
    "lucide-static": "^0.562.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "chai": "^6.2.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "mocha": "^11.7.1",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^7.1.12",
    "vite-plugin-lib-inject-css": "^2.2.2"
  }
}
