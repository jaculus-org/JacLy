{
  "name": "@jaculus/jacly",
  "description": "Jacly = Blockly editor for Jaculus",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./web": {
      "types": "./dist/web.d.ts",
      "import": "./dist/web.js",
      "default": "./dist/web.js"
    },
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "import": "./dist/ui/index.js",
      "default": "./dist/ui/index.js"
    },
    "./storage": {
      "types": "./dist/storage/index.d.ts",
      "import": "./dist/storage/index.js",
      "default": "./dist/storage/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "react": [
        "dist/react/index.d.ts"
      ],
      "storage": [
        "dist/storage/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "echo 'No linting configured for this package'",
    "lint:fix": "echo 'No linting configured for this package'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "schema:gen": "tsx src/config/generate-schema.ts",
    "clean": "rm -rf dist *.tsbuildinfo",
    "clean-node": "pnpm clean && rm -rf node_modules"
  },
  "dependencies": {
    "@jaculus/device": "workspace:*",
    "@jaculus/project": "workspace:*",
    "@kuband/react-blockly": "^10.0.1",
    "@obsidize/tar-browserify": "https://github.com/jospete/obsidize-tar-browserify/raw/refs/heads/fix/module-declarations/packed/obsidize-tar-browserify.tgz",
    "@zenfs/core": "^2.4.2",
    "@zenfs/dom": "^1.2.5",
    "blockly": "^12.3.1",
    "fflate": "^0.8.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@finom/zod-to-json-schema": "^3.24.11",
    "@types/node": "^24.9.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "vite": "^7.1.12"
  },
  "peerDependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "blockly": {
      "optional": true
    }
  }
}
